        <input class="form-check-input mt-0" type="checkbox" value="" aria-label="Checkbox for following text input">
      </div>
      <input type="text" class="form-control" aria-label="Text input with checkbox" value="<%= locals.tasks[i] %>"
        readonly>
    </div>

        <% }
    }

      else{

        } %>

